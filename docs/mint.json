{
  "openapi": "3.0.0",
  "info": {
    "title": "Chronologue API",
    "version": "1.0.0",
    "description": "Chronologue provides a memory-grounded interface for scheduling events, validating traces, and syncing with calendar systems."
  },
  "paths": {
    "/validate-trace": {
      "post": {
        "summary": "Validate a memory trace",
        "description": "Validates a JSON memory trace against the Chronologue schema.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MemoryTrace"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Validation success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "valid": { "type": "boolean" },
                    "errors": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/convert": {
      "post": {
        "summary": "Convert trace to ICS",
        "description": "Transforms a memory trace into a valid .ics calendar event.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MemoryTrace"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns .ics content",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ics": { "type": "string", "description": "Raw ICS content as string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/sync-google": {
      "post": {
        "summary": "Sync event to Google Calendar",
        "description": "Takes an event trace and syncs it to a connected Google Calendar account.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MemoryTrace"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sync success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "eventId": { "type": "string" },
                    "status": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MemoryTrace": {
        "type": "object",
        "required": ["timestamp", "content", "id"],
        "properties": {
          "id": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" },
          "content": { "type": "string" },
          "location": { "type": "string" },
          "attendees": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}

