{
    "$schema": "https://mintlify.com/schema.json",
    "name": "Chronologue",
    "description": "Memory-grounded scheduling and orchestration system",
    "logo": {
      "light": "/logo/light.svg",
      "dark": "/logo/dark.svg",
      "href": "https://github.com/dr2633/chronologue"
    },
    "favicon": "/favicon.svg",
    "theme": "venus",
    "colors": {
      "primary": "#00C896",
      "light": "#9CEBCC",
      "dark": "#007B5F",
      "background": {
        "light": "#FFFFFF",
        "dark": "#0F1117"
      }
    },
    "modeToggle": {
      "default": "dark"
    },
    "tabs": [
      {
        "name": "Guides",
        "url": "guides"
      },
      {
        "name": "API Reference",
        "url": "api-reference"
      }
    ],
    "navigation": [
      {
        "group": "Get Started",
        "pages": [
          "introduction",
          "quickstart",
          "development"
        ]
      },
      {
        "group": "Core Concepts",
        "pages": [
          "essentials/overview",
          "essentials/validation",
          "essentials/ics-format"
        ]
      },
      {
        "group": "API Reference",
        "pages": [
          "api-reference/introduction",
          {
            "group": "Endpoints",
            "pages": [
              "api-reference/validate-trace",
              "api-reference/convert",
              "api-reference/sync-google"
            ]
          }
        ]
      },
      {
        "group": "Snippets",
        "pages": [
          "snippets/validate",
          "snippets/convert",
          "snippets/sync"
        ]
      }
    ],
    "anchors": [
      {
        "name": "GitHub",
        "icon": "github",
        "url": "https://github.com/dr2633/chronologue"
      },
      {
        "name": "Email Support",
        "icon": "mail",
        "url": "mailto:support@chronologue.ai"
      }
    ],
    "topbarCtaButton": {
      "name": "View on GitHub",
      "url": "https://github.com/dr2633/chronologue"
    },
    "api": {
      "spec": "openapi.json"
    },
    "feedback": {
      "suggestEdit": true,
      "raiseIssue": true,
      "thumbsRating": true
    },
    "search": {
      "prompt": "Search Chronologue docs..."
    },
    "isWhiteLabeled": false
  }
  