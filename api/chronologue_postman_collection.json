{
    "info": {
      "name": "Chronologue Memory Orchestration API",
      "description": "Postman collection for testing Chronologue's grocery memory, approval, feedback, and calendar generation APIs.",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Create Order",
        "request": {
          "method": "POST",
          "header": [{ "key": "Content-Type", "value": "application/json" }],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"user_id\": \"user_123\",\n  \"items\": [\n    { \"quantity\": 2, \"item\": \"Organic Blueberries\" },\n    { \"quantity\": 1, \"item\": \"Dino Kale\" }\n  ],\n  \"approval_schedule\": { \"day\": \"Friday\", \"time\": \"09:00\" },\n  \"delivery_schedule\": { \"day\": \"Sunday\", \"window_start\": \"08:00\", \"window_end\": \"10:00\" }\n}"
          },
          "url": { "raw": "http://127.0.0.1:8000/api/orders", "protocol": "http", "host": ["127.0.0.1"], "port": "8000", "path": ["api", "orders"] }
        }
      },
      {
        "name": "Get Order",
        "request": {
          "method": "GET",
          "header": [],
          "url": {
            "raw": "http://127.0.0.1:8000/api/orders/:order_id",
            "protocol": "http",
            "host": ["127.0.0.1"],
            "port": "8000",
            "path": ["api", "orders", ":order_id"],
            "variable": [{ "key": "order_id", "value": "replace_with_order_id" }]
          }
        }
      },
      {
        "name": "Edit Order",
        "request": {
          "method": "PATCH",
          "header": [{ "key": "Content-Type", "value": "application/json" }],
          "body": {
            "mode": "raw",
            "raw": "[\n  { \"quantity\": 2, \"item\": \"Organic Strawberries\" },\n  { \"quantity\": 1, \"item\": \"Spinach\" }\n]"
          },
          "url": {
            "raw": "http://127.0.0.1:8000/api/orders/:order_id",
            "protocol": "http",
            "host": ["127.0.0.1"],
            "port": "8000",
            "path": ["api", "orders", ":order_id"],
            "variable": [{ "key": "order_id", "value": "replace_with_order_id" }]
          }
        }
      },
      {
        "name": "Submit Approval",
        "request": {
          "method": "POST",
          "header": [{ "key": "Content-Type", "value": "application/json" }],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"user_id\": \"user_123\",\n  \"approval_status\": \"approved\",\n  \"timestamp\": \"2025-05-01T09:05:00Z\"\n}"
          },
          "url": {
            "raw": "http://127.0.0.1:8000/api/orders/:order_id/approval",
            "protocol": "http",
            "host": ["127.0.0.1"],
            "port": "8000",
            "path": ["api", "orders", ":order_id", "approval"],
            "variable": [{ "key": "order_id", "value": "replace_with_order_id" }]
          }
        }
      },
      {
        "name": "Submit Feedback",
        "request": {
          "method": "POST",
          "header": [{ "key": "Content-Type", "value": "application/json" }],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"user_id\": \"user_123\",\n  \"order_id\": \"replace_with_order_id\",\n  \"feedback_text\": \"Delivery was perfect!\",\n  \"timestamp\": \"2025-05-01T11:00:00Z\"\n}"
          },
          "url": {
            "raw": "http://127.0.0.1:8000/api/feedback",
            "protocol": "http",
            "host": ["127.0.0.1"],
            "port": "8000",
            "path": ["api", "feedback"]
          }
        }
      }
    ]
  }
  